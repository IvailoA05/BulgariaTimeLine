<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BulgariaTimeLine.ReportPage"
             Title="ReportPage">
    <VerticalStackLayout>
        <StackLayout Margin="20">
            <Label Text="Докладвайте проблем" FontSize="Large" HorizontalOptions="Center" Margin="0,30,0,20"/>
            <Label Text="При проблем, свържете се с нас, като попълните полетата долу и опишете проблема!" FontSize="Small" HorizontalOptions="Center" Margin="0,5,0,70"/>

            <Frame BackgroundColor="White" CornerRadius="10" Padding="20">
                <StackLayout>
            <Label Text="Имейл:" FontSize="20"/>
            <Entry x:Name="EmailEntry" Placeholder="Въведете имейл" Keyboard="Email" />

            <Label Text="Тема:" FontSize="20"/>
            <Entry x:Name="TitleEntry" Placeholder="Въведете тема" />

            <Label Text="Описание:" FontSize="20"/>
            <Editor x:Name="DescriptionEditor" Placeholder="Въведте описание на проблема" HeightRequest="100" />

            <Button Text="Изпратете заявка" Clicked="OnSubmitClicked" BackgroundColor="#4CAF50" TextColor="White" Margin="0,20,0,0"/>
                </StackLayout>
            </Frame>
        </StackLayout>
    </VerticalStackLayout>
</ContentPage>